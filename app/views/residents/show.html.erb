<% provide(:title, "#{@resident.name} | Residents") %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @resident.name %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @resident.dob %>
</p>

<p>
  <% if @resident.room %>
    <strong>Room:</strong>
    <%= link_to @resident.room.name, @resident.room %>
  <% end %>
</p>

<%= link_to 'Edit', edit_resident_path(@resident) %> |
<%= link_to 'Back', residents_path %>
