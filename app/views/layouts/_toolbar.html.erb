<nav class="toolbar">
  <nav class="subtoolbar">
    <% if signed_in? %>
      <%= link_to 'Rooms', rooms_path, class: 'button' %>
      <%= link_to 'Residents', residents_path, class: 'button' %>
    <% end %>
  </nav>
  <nav class="subtoolbar">
    <%= link_to 'carehomely', root_path, class: 'logo' %>
  </nav>
